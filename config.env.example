# Keynote MCP Server - Environment Configuration
# Copy this file to .env and fill in your actual values

# Google Gemini AI API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# MCP Server Configuration
MCP_SERVER_NAME=Keynote-AI-Automation
MCP_SERVER_VERSION=1.0.0

# Keynote Automation Settings
KEYNOTE_AUTOMATION_DELAY=2.0          # Delay between automation steps (seconds)
KEYNOTE_SCREEN_DETECTION_TIMEOUT=5.0  # Timeout for screen detection (seconds)

# Logging Configuration
LOG_LEVEL=INFO                         # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/keynote_mcp.log          # Log file path

# Development Settings
DEBUG_MODE=false                       # Enable debug mode for development
MAX_ITERATIONS=6                       # Maximum iterations for AI problem solving
LLM_TIMEOUT=10                         # LLM response timeout (seconds)